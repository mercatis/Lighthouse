<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="com.mercatis.lighthouse3.security" name="Security" schema="schema/com.mercatis.lighthouse3.security.exsd"/>
   <extension
         id="com.mercatis.lighthouse3.security.internal.defaultLoginModule"
         point="org.eclipse.equinox.security.loginModule">
      <loginModule
            class="com.mercatis.lighthouse3.security.DefaultLoginModule">
      </loginModule>
   </extension>
   <extension
         id="com.mercatis.lighthouse3.security.mercatisCallbackHandler"
         point="org.eclipse.equinox.security.callbackHandler">
      <callbackHandler
            class="com.mercatis.lighthouse3.security.DefaultLoginModule">
      </callbackHandler>
   </extension>
   <extension
         point="org.eclipse.equinox.security.callbackHandlerMapping">
      <callbackHandlerMapping
            callbackHandlerId="com.mercatis.lighthouse3.security.mercatisCallbackHandler"
            configName="com.mercatis.lighthouse3.security">
      </callbackHandlerMapping>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="com.mercatis.lighthouse3.security.loginCommand"
            name="Login">
      </command>
      <command
            id="com.mercatis.lighthouse3.security.logoutCommand"
            name="Logout">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.mercatis.lighthouse3.security.internal.LoginHandler"
            commandId="com.mercatis.lighthouse3.security.loginCommand">
      </handler>
      <handler
            class="com.mercatis.lighthouse3.security.internal.LogoutHandler"
            commandId="com.mercatis.lighthouse3.security.logoutCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <sourceProvider
            provider="com.mercatis.lighthouse3.security.internal.ContextRolesSourceProvider">
         <variable
               name="mercatis.security.roles"
               priorityLevel="workbench">
         </variable>
      </sourceProvider>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="com.mercatis.lighthouse3.security.internal.ContextRolesCredentialTester"
            id="com.mercatis.lighthouse3.security.contextBasedRolesCredentialTester"
            namespace="mercatis.security"
            properties="role"
            type="com.mercatis.lighthouse3.security.internal.SecurityBindingImpl">
      </propertyTester>
   </extension>

</plugin>
